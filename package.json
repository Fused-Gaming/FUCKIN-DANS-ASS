{
  "name": "blockchain-forensic-toolkit",
  "version": "2.1.0",
  "description": "Professional blockchain forensic analysis toolkit with AI-powered MCP integration, Etherscan API V2 support, and comprehensive investigation management",
  "main": "index.js",
  "bin": {
    "forensics": "./bin/forensics.js",
    "blockchain-forensics": "./bin/forensics.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "getContracts": "node getWalletContracts/index.js",
    "viewHistory": "node viewHistory/index.js",
    "forensics": "node forensics/index.js",
    "db": "node database/sql-browser.js",
    "db:browser": "node database/sql-browser.js",
    "mcp:test": "node test-mcp-integration.js",
    "mcp:build": "cd mcp-etherscan-server && npm run build",
    "mcp:start": "node mcp-etherscan-server/build/index.js",
    "mcp:install": "cd mcp-etherscan-server && npm install",
    "mcp:setup": "npm run mcp:install && npm run mcp:build && npm run mcp:test",
    "investigation:test": "node test-investigation.js",
    "setup": "npm install && npm run mcp:setup && npm run mcp:test",
    "validate": "npm run mcp:test && npm run investigation:test",
    "quickstart": "npm run setup && npm run forensics",
    "help": "node scripts/help.js",
    "npm:login": "node scripts/npm-login.js",
    "npm:publish": "node scripts/npm-publish.js",
    "npm:publish:dryrun": "npm pack --dryrun",
    "npm:verify": "npm install -g blockchain-forensic-toolkit && forensics --version"
  },
  "keywords": [
    "blockchain",
    "forensics",
    "ethereum",
    "etherscan",
    "investigation",
    "crypto",
    "security",
    "threat-intelligence",
    "mcp",
    "model-context-protocol",
    "ai-assisted",
    "api-v2",
    "court-ready",
    "evidence-management"
  ],
  "author": "Fused-Gaming",
  "license": "ISC",
  "dependencies": {
    "archiver": "^7.0.1",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.3",
    "play-sound": "^1.1.6",
    "prompts": "^2.4.2"
  },
  "files": [
    "bin/**",
    "scripts/**",
    "forensics/**",
    "database/**",
    "intelligence/**",
    "getWalletContracts/**",
    "viewHistory/**",
    "mcp-etherscan-server/build/**",
    "mcp-etherscan-server/package.json",
    "mcp-etherscan-server/README.md",
    "mcp-etherscan-server/LICENSE",
    "docs/**",
    "*.md",
    "*.json",
    "LICENSE",
    ".env.example",
    ".mcp.json"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=7.0.0"
  },
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Fused-Gaming/blockchain-forensic-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/Fused-Gaming/blockchain-forensic-toolkit/issues"
  },
  "homepage": "https://github.com/Fused-Gaming/blockchain-forensic-toolkit#readme",
  "directories": {
    "doc": "docs",
    "lib": "scripts",
    "bin": "bin"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}
